<!-- views/profile.ejs -->
<!doctype html>
<html>

<head>
  <title>AutoCoin</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <style>
    body {
      padding-top: 80px;
      word-wrap: break-word;
    }
  </style>
</head>

<body>
  <div class="container">

    <div class="page-header">
      <h1 class="text-center"><span class="fa fa-user"></span> Profile Page</h1>
      <a href="/logout" class="btn btn-default btn-sm pull-right fa fa-power-off"> Logout</a>
      <br><br>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6 text-center">
          <div class="row">
          <div class="col-sm-12 text-center">
        <div class="well">
          <h3><span class="fa fa-info-circle"></span> User Details</h3><br>

          <p>
            <strong>id</strong>:
            <%= user._id %><br><br>
              <strong>email</strong>:
              <%= user.email %><br><br>
          </p>

        </div>
      </div>
      <% if(user.contractAddress) { %>
      <div class="col-sm-12 text-center">
          <div class="well">
              <p>
                  <strong>Contract Address</strong>:<br>
                  <%= user.contractAddress ? user.contractAddress : 'Not Deployed' %><br><br><hr size="5">
                    <strong>Contract Tx Hash</strong>:
                  <%= user.contractTxHash ? user.contractTxHash : 'Not Deployed' %><br><br>
                </p>


          </div>
        </div>
        <% } %>
      </div>
        <br><br><br>
        <% if (message.length >0) { %>
          <div class="alert alert-danger">
            <%= message %>
          </div>
          <a href="/buyPackage" class="btn btn-danger btn-sm">Buy your package here</a>
          <% } %>
      </div>
      <div class="col-sm-6 text-center">
        <div class="row">
          <div class="col-sm-12 text-center">
            <div class="well">
              <h3>Smart Contract Creation</h3><hr size="10">

              <br>
              <span> ERC20 Standard Token</span><br><br>
                  <a href="/customContract" class="btn btn-default btn-sm">Custom Contract</a>
                  <a href="/recommendedContract" class="btn btn-default btn-sm">Recommended Contract</a>
              <br><hr size="5">
              <br>
              <span> ERC721 Standard Token (Coming Soon)</span><br><br>
              <a href="#" class="btn btn-default btn-sm" disabled>Create Contract</a>
            </div>
          </div>

          <div class="col-sm-12 text-center">
            <div class="well">
              <h3>Smart Contract Deployment</h3>
              <br>
              <a href="/deployer" class="btn btn-default btn-sm">Deploy Contract</a>

            </div>
          </div>
          <div class="col-sm-12 text-center">
            <div class="well">
              <h3>Smart Contract ICO platform (Coming Soon)</h3>
              <br>
              <a href="/icoDashboardSetup" class="btn btn-default btn-sm"> ICO setup</a>

            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</body>

</html>
